                    android:id="@id/rb_question_four_answer_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_four_answer_d"
                    android:textColor="@color/yellow"/>

            </RadioGroup>

            <TextView
                android:id="@id/question_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_five"
                android:textColor="@color/yellow"
                android:textSize="@dimen/questionTextSize" />

            <CheckBox
                android:id="@id/cb_question_five_answer_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_five_answer_a"
                android:textColor="@color/yellow" />

            <CheckBox
                android:id="@id/cb_question_five_answer_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_five_answer_b"
                android:textColor="@color/yellow" />

            <CheckBox
                android:id="@id/cb_question_five_answer_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_five_answer_c"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_five_answer_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_five_answer_d"
                android:textColor="@color/yellow"/>

            <TextView
                android:id="@id/question_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_six"
                android:textColor="@color/yellow"
                android:textSize="@dimen/questionTextSize" />

            <CheckBox
                android:id="@id/cb_question_six_answer_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_six_answer_a"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_six_answer_b"
                android:layout_width="wrap_content"
