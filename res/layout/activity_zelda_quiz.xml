                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_seven"
                android:textColor="@color/yellow"
                android:textSize="@dimen/questionTextSize" />

            <RadioGroup
                android:id="@id/radio_group_question_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@id/rb_question_seven_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_answer_a"
                    android:textColor="@color/yellow"/>

                <RadioButton
                    android:id="@id/rb_question_seven_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_answer_b"
                    android:textColor="@color/yellow"/>

                <RadioButton
                    android:id="@id/rb_question_seven_answer_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_answer_c"
                    android:textColor="@color/yellow"/>

                <RadioButton
                    android:id="@id/rb_question_seven_answer_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_seven_answer_d"
                    android:textColor="@color/yellow"/>

            </RadioGroup>

            <TextView
                android:id="@id/question_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_eight"
                android:textColor="@color/yellow"
                android:textSize="@dimen/questionTextSize" />

            <CheckBox
                android:id="@id/cb_question_eight_answer_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_eight_answer_a"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_eight_answer_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_eight_answer_b"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_eight_answer_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_eight_answer_c"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_eight_answer_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_eight_answer_d"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@id/question_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_nine"
                android:textSize="@dimen/questionTextSize"
                android:textColor="@color/yellow"/>

            <RadioGroup
                android:id="@id/radio_group_question_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@id/rb_question_nine_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_nine_answer_a"
                    android:textColor="@color/yellow"/>

                <RadioButton
                    android:id="@id/rb_question_nine_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question_nine_answer_b"
                    android:textColor="@color/yellow"/>

            </RadioGroup>

            <TextView
                android:id="@id/question_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingBottom="@dimen/questionsPadding"
                android:paddingTop="@dimen/questionsPadding"
                android:text="@string/question_ten"
                android:textColor="@color/yellow"
                android:textSize="@dimen/questionTextSize" />

            <CheckBox
                android:id="@id/cb_question_ten_answer_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_ten_answer_a"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_ten_answer_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_ten_answer_b"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_ten_answer_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_ten_answer_c"
                android:textColor="@color/yellow"/>

            <CheckBox
                android:id="@id/cb_question_ten_answer_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_ten_answer_d"
                android:textColor="@color/yellow"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/quizIntroStartButtonMargin"
                android:onClick="submitQuiz"
                android:text="@string/submit_button"
                android:textColor="@color/zeldaGreen"
                android:background="@color/yellow"
                tools:ignore="OnClick" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
